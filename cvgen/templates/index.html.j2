<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>{{ cv.name }} CV {{ timestamp }}</title>
    <link rel="stylesheet" href="./style.css">
</head>

<body>
    <div class="name">
        <h1>{{ cv.name }}</h1>
        <h2 class="subtitle">Curriculum Vitae</h2>
    </div>
    <dl class="personalia">
        <dt><strong>Phone:</strong></dt>
        <dd>{{ cv.personalia.phone }}</dd>
        <dt><strong>Email:</strong></dt>
        <dd>{{ cv.personalia.email }}</dd>
        <dt><strong>Address:</strong></dt>
        <dd>{{ cv.personalia.address }}</dd>
        <dt><strong>Nationality:</strong></dt>
        <dd>{{ cv.personalia.nationality }}</dd>
    </dl>
    <br>
    <br>
    <br>
    <br>
    <br>
    <main>
        <div class="blurb">{{ cv.blurb | safe }}</div>
        <h2>Work Experience</h2>
        <table class="cvtable">
            {% for job in cv.experience %}
            <tr>
                <td colspan="3">
                    <h3>{{ job.title }}</h3><br>
                    {% if job.industry %}
                    <em>{{ job.industry }}</em>
                    {% endif %}
                </td>
                <td class="dates">{{ job.dates }}</td>
            </tr>
            {% if job.description %}
            <tr>
                <td colspan="4">
                    <p>{{ job.description }}</p>
                </td>
            </tr>
            {% endif %}
            {% endfor %}
        </table>
        <h2>Education</h2>
        <table class="cvtable">
            {% for ed in cv.education %}
            <tr>
                <td colspan="3">
                    <h3>{{ ed.diploma }}</h3><br>
                    <em>{{ ed.institution }}</em>
                </td>
                <td class="dates">{{ ed.dates }}</td>
            </tr>
            <tr>
                <td colspan="4">
                    <p>{{ ed.description }}</p>
                </td>
            </tr>
            {% endfor %}
        </table>
        <h2>Skills</h2>
        <table class="cvtable">
            <tr>
                <td>&nbsp;</td>
            </tr>
            {% for skill in cv.skills %}
            <tr>
                <td class="description">
                    <strong>{{ skill.category }}</strong>
                    <p>{{ skill.keywords | join(', ') }}. <br><br><br></p>
                </td>
            </tr>
            {% endfor %}
        </table>
        <h2>Projects</h2>
        <table class="cvtable">
            {% for project in cv.projects %}
            <tr>
                <td>
                    <h3>{{ project.title }}</h3><br>
                </td>
            </tr>
            <tr>
                <td>
                    <p>{{ project.description }}
                        {% if project.link %}
                        <br><a href="{{ project.link }}">{{ project.link }}</a>
                        {% endif %}
                    </p>
                </td>
            </tr>
            {% endfor %}
        </table>
        <h2>Other Activities</h2>
        <table class="cvtable">
            {% for activity in cv.activities %}
            <tr>
                <td colspan="3">
                    <h3>{{ activity.title }}</h3><br>
                    <em>{{ activity.organization }}</em>
                </td>
                <td class="dates">{{ activity.dates }}</td>
            </tr>
            <tr>
                <td colspan="4">
                    <p>{{ activity.description }}</p>
                </td>
            </tr>
            {% endfor %}
        </table>
    </main>
</body>

</html>
